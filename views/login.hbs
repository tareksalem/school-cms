<style>
    @import url("/stylesheets/sign.css");
</style>

<div class="container container-fluid container-sign">
    <form class="form-sign" method="POST" action="/login" id="form-login">
        <h3>تسجيل الدخول</h3>
        {{#if message}}
            <div class="aler alert-danger" style="padding:10px;text-align:center;">{{message}}</div>
        {{/if}}
        {{#if success}}
            <div class="alert alert-success">{{success}}</div>
        {{/if}}
        <div class="form-group">
            <input name="username" type="text" class="form-control" placeholder="اسم المستخدم أوالإيميل">
        </div>
        <div class="form-group">
            <input name="password" type="password" class="form-control" placeholder="كلمة المرور">
        </div>
        <div class="form-group">
            <input role="button" type="submit" value="دخول" class="submit-sign"/>
        </div>
        <div class="form-group">
            <a href="/login/reset">نسيت كلمة المرور ؟</a>
        </div>
    </form>
</div>